    <Grid Background="White"  >


        <FlowDocumentReader    Style="{DynamicResource TitleTexttan}">
            <FlowDocument 
                    ColumnWidth="400" 
                    IsOptimalParagraphEnabled="True" 
                    IsHyphenationEnabled="True"
